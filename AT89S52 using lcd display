#include <AT89S52.h>
#define DATA P2
#define RS P3_0
#define EN P3_2
#define RW P3_1

#define buzzer_pin = P1_0;
#define smoke_sensor_pin = P3_3;

void main() {
    P1_0=1;
    P3_3=1;

    while(1) {
        if (P3_3 == 0) {
            P1_0 = 0;
        }
        else {
            P1_0 = 1;
        }
    }
}
void lcd_init(void);
void lcd_data(char);
void lcd_cmd(char);
void lcd_busy(void);
void lcd_print(char*);

void main()
{
 EN=0;
 lcd_init();
 lcd_print("IPL 2023");
 lcd_cmd(0xC0);
 lcd_print(" WINNER CSK ");
 while(1)
 {
 	patten();
 
 }
}

void lcd_init(void)
{
 lcd_busy();
 lcd_cmd(0x38);
 lcd_cmd(0x01);
 lcd_cmd(0x0C);
 lcd_cmd(0x06);
 lcd_cmd(0x80);
}

void lcd_cmd(char c)
{
 DATA=c;
 RS=0;
 RW=0;
 EN=1;
 EN=0;
 lcd_busy();
}

void lcd_data(char d)
{
 DATA=d;
 RS=1;
 RW=0;
 EN=1;
 EN=0;
 lcd_busy();
}

void lcd_busy()
{
 char s;
 RS=0;
 RW=1;
 DATA=0xFF;
 EN=1;
 s=DATA&0x80;
 EN=0;
 while(s!=0x00)
 {
  EN=1;
  s=DATA&0x80;
  EN=0;
 }
}

void lcd_print(char*msg)
{
 while(*msg!=0x00)
 {
  lcd_data(*msg);
  *msg++;
 }
}
